  <build>
    <finalName>dubbo-interface-demo</finalName>
    <plugins>
      <!-- plugin 在 plugins 里面 -->
      <plugin>
        <groupId>org.apache.tomcat.maven</groupId>
        <artifactId>tomcat8-maven-plugin</artifactId>
        <version>3.0-r1756463</version>
        <configuration>
          <port>8082</port>
          <path>/</path>
          <uriEncoding>UTF-8</uriEncoding>
          <charset>UTF-8</charset>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <!--插件远程仓库-->
